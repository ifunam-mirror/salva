.section-with-border-and-bg
  .row
    = render :partial => "/shared/errors", :object => f.object.errors

  .row
    .span-9= f.input :authors, :as => :text, :input_html => { :size => '60x1' }
    .span-9.last= f.input :title, :as => :text, :input_html => { :size => '60x1' }

  .row
    .span-6
      = f.association :genericworktype, :collection => Genericworktype.teaching_products, :using => :name, :input_html => {:prompt => true, :class => 'chosen-select', :required => true}
    #institution.span-12.last
      = f.association :institution, :using => :name, :input_html => {:prompt => true, :class => 'chosen-select', :required => true}
      = link_to_new_record 'Agregar instituciÃ³n', new_institution_path

  .row
    .span-3
      = f.input :year, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }
    .span-15.last
      = f.label :month, :required => true
      = select_month_for 'month', 'genericwork'

  .row
    = f.association :genericworkstatus, :collection => Genericworkstatus.all, :using => :name, :as => :radio, :prompt => true, :wrapper_class => 'radio-set'

  .row
    .span-6.last
      = render :partial => 'user_genericworks/form', :locals => {:genericwork => @genericwork, :f => f}
