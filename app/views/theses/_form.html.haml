%div{ :class => 'span-22 section_left append-bottom last' }
  = render :partial => "/shared/errors", :object => f.object.errors
  %div{:class=> 'span-21 section_left push-1 last'}
    = f.input :title, :as => :string, :input_html => {:size => 50}, :wrapper_class => 'span-10'
    = f.input :authors, :as => :string, :input_html => {:size => 50}, :wrapper_class => 'span-10 last'

  - f.object.career = Career.new if f.object.career.nil?
  = f.simple_fields_for :career, f.object.career do |c|
    = render :partial => 'careers/form', :locals => { :f => c}

  %div{ :class => 'span-21 section_left push-1 last' }
    -  @user_theses = user_role(@thesis, :user_theses, current_user.id)
    = f.simple_fields_for :user_theses, @user_theses do |ut|
      = render :partial => 'user_theses/form', :locals => { :f => ut }
    = f.association :thesismodality, :as => :radio, :wrapper_class => 'span-7 radio_set'
    = f.association :thesisstatus, :as => :radio, :wrapper_class => 'span-7 radio_set last'
  
    %div{ :class => 'span-21 last' }
      = f.input :startyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }, :wrapper_class => 'span-5', :required => true
      %div{:class => 'span-5'}
        = f.label :startmonth, :required => true
        = select_month(Date.today, :field_name => 'startmonth', :prefix => 'thesis')
      = f.input :endyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }, :wrapper_class => 'span-5', :required => true
      %div{:class => 'span-5 last'}
        = f.label :endmonth, :required => true
        = select_month(Date.today, :field_name => 'endmonth', :prefix => 'thesis')

