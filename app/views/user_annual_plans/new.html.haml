.span-17.last
  %h3= t('.title')
= render :partial => 'user_annual_reports/profile', :object => @profile

= simple_form_for @annual_plan, :url => user_annual_plans_path,  :html => { :id => 'record'} do |f|
  .section-with-border-and-bg
    = render :partial => 'form', :locals => { :f => f }
  .span-17.last.alert.alert-info
    =t('.annual_plan_hint')

  #submit_buttons
    = f.submit t(:save)
    = link_to t(:cancel), user_annual_plans_path
