
%tr{:class => cycle('record-odd', 'record-even'), :id => dom_id(article) }
  %td{:style => 'width: 30px;'}
    = check_box_tag 'record_id', article.id, false, 'data-parent-id' => dom_id(article)
  %td{:style => 'width: 630px;'}
    = article.as_vancouver
    %div{:class => 'ui-state-highlight ui-corner-all', :id => 'associated_records'}
      %span{:class => 'ui-icon ui-icon-info', :style => 'float: right;', :title => t(:not_associated)}
    %div{:class => 'ui-state-highlight ui-corner-all', :id => 'associated_records'}
      %span{:class => 'ui-icon ui-icon-check', :style => 'float: right;', :title => t(:associated)}
  %td{:class => 'action'}
    %div{:class => 'ui-widget ui-widget-content ui-corner-all associated_authors', :style => 'width: 32px; height:18px; padding: 2px;', :id => 'associated_authors_' + dom_id(article) }
      %span{:style => 'float: left; text-align: right; color:white; margin-left: 5px;', :id => 'associated_authors_size_'+ dom_id(article) }
        = article.associated_authors.size
      %div{:class => "ui-state-default ui-corner-all", :style => 'heigth: 16px;'} 
        = link_to content_tag(:span, '', {:class =>'ui-icon ui-icon-triangle-1-s' }), author_list_article_path(:id => article.id, :format => 'js'), :remote => true, :id => dom_id(article), :title => 'Mostrar autores'
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_action 'ui-icon-minus', t(:del_author),  edit_article_path(:id => article.id)
    = link_to_action 'ui-icon-plus', t(:add_author),  edit_article_path(:id => article.id)
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_action 'ui-icon-pencil', t(:edit),  edit_article_path(:id => article.id)
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_action 'ui-icon-trash', t(:del), article_path(:id => article.id), :method => :delete, :confirm => t(:delete_confirm_question), :remote => true, 'data-parent-id' => dom_id(article)