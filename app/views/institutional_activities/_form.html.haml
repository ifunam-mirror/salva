.section-with-border-and-bg
  .row
    = render :partial => "/shared/errors", :object => f.object.errors

  .row
    .span-9
      = f.input :descr, :as => :text, :input_html => { :size => '40x2' }
    .span-9.last
      #institution.span-18.last{'data-controller-name' => 'institutions'}
      = f.label :institution, :required => true
      = f.select :institution_id, [], {:prompt => true}, {:class => 'chosen-select'}
      = link_to_new_record 'Agregar instituciÃ³n', '#'
  .row
    .span-3
      = f.input :startyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }
    .span-6
      = f.label :startmonth, :required => true
      = select_month_for 'startmonth', 'institutional_activity'

    .span-3
      = f.input :endyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }
    .span-6.last
      = f.label :endmonth, :required => true
      = select_month_for 'endmonth', 'institutional_activity'
