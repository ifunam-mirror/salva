      = f.label :state_id
    %div{:class=> 'span-6'}
      = f.label :city_id
    %div{:class=> 'span-6 last'}
      = f.label :zipcode
    %div{:class=> 'span-6'}
      = f.collection_select :country_id, Country.all, :id, :name, {:prompt => true}
    %div{:class=> 'span-6'}
      = f.collection_select :state_id, State  .all, :id, :name, {:prompt => true}
    %div{:class=> 'span-6'}
      = f.collection_select :city_id, City.all, :id, :name, {:prompt => true}
    %div{:class=> 'span-6 last'}
      = f.text_field :zipcode, :size => 5

  %div{ :class => 'span-24 last' }
    %div{:class=> 'span-6'}
      = f.label :phone
    %div{:class=> 'span-6'}
      = f.label :fax
    %div{:class=> 'span-6'}
      = f.label :movil
    %div{:class=> 'span-6 last'}
      = f.label :is_postaddress
    %div{:class=> 'span-6'}
      = f.text_field :phone
    %div{:class=> 'span-6'}
      = f.text_field :fax
    %div{:class=> 'span-6'}
      = f.text_field :movil
    %div{:class=> 'span-6 last'}
