%div{ :class => 'span-24 section_left last' }
  %h2 Domicilio

  - if !f.object.nil? and !f.object.new_record?
    = f.hidden_field :id
    = f.hidden_field :user_id

  %div{ :class => 'span-18 last' }
    %div{:class=> 'span-6'}
      = f.label :addresstype_id
    %div{:class=> 'span-6'}
      = f.label :location
    %div{:class=> 'span-6 last'}
      = f.label :pobox
