- unless f.object.new_record?
  = f.hidden_field :id
  = f.hidden_field :regularcourse_id, :value => @regular_course.id
= f.hidden_field :user_id, :value => current_user.id
= f.association :period, :collection => Period.all, :wrapper_class => 'span-6 last', :selected => f.object.period_id || Period.first.id
= f.association :roleinregularcourse, :as => :radio, :collection => Roleinregularcourse.all, :wrapper_class => 'span-5 radio-set'
= f.input :hoursxweek, :as => :string, :input_html => { :size => 4}, :wrapper_class => 'span-3'

