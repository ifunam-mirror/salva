%font.name= user.firstname_and_lastname
%br/
= translate_category(user.jobposition_for_researching.category_name)
%br/
= mail_to user.email, user.email, :encode => "javascript"
%br/
- unless user.professional_address.nil?
  %font.address
    %b Address:
    = user.professional_address.to_text
    %b Postal Address:
    = user.professional_address.postal_address_to_text
    - unless user.professional_address.phone.to_s.strip.empty?
      %b Tel&eacute;fono:
      = '+52 (55) ' + user.professional_address.phone.to_s
    - unless user.professional_address.fax.to_s.strip.empty?
      %b Fax:
      = '+52 (55) ' + user.professional_address.fax.to_s
