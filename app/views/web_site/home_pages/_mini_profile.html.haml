%font.name= link_to user.title_and_fullname_en, web_site_home_page_path(user) + '?locale=en'
%br/
= translate_category(user.jobposition_for_researching.category_name)
%br/
= mail_to user.email, user.email, :encode => "javascript"
%br/
- unless user.professional_address.nil?
  Phone: #{'+52 (55) ' + user.professional_address.phone.to_s unless user.professional_address.phone.to_s.strip.empty?}
  - unless user.professional_address.phone_extension.to_s.strip.empty?
    &nbsp; Extension number: #{ user.professional_address.phone_extension.to_s}
  - unless user.professional_address.fax.to_s.strip.empty?
    %br/
    Fax: #{'+52 (55) ' + user.professional_address.fax.to_s unless user.professional_address.fax.to_s.strip.empty?}
