%h3= t('user_stimuli.show.title')

.section-with-border-and-bg
  - show_for @user_stimulus do |u|
    .row
      .span-18.last= u.association :stimuluslevel, :using => :name_and_type
    .row
      .span-4= u.attribute :startyear
      .span-4.last= u.attribute :startmonth
    .row
      .span-4= u.attribute :endyear
      .span-4.last= u.attribute :endmonth
    .row
      = render :partial => 'shared/record', :object => @user_stimulus

#submit_buttons
  = link_to t(:edit), edit_user_stimulus_path(:id => @user_stimulus.id)
  = link_to t(:back), user_stimuli_path

