%h3= t('jobpositions.show.title')
.section-with-border-and-bg
  = show_for @jobposition do |u|
    .span-9
      = u.association :institution, :using => :name
    .span-9.last
      = u.attribute :descr

    .span-5
      = u.attribute :start_date
    .span-14.last
      = u.attribute :end_date

    .row
      = render :partial => 'shared/record', :object => @jobposition

#submit_buttons
  = link_to t(:edit), edit_external_jobposition_path(:id => @jobposition.id)
  = link_to t(:back), external_jobpositions_path

