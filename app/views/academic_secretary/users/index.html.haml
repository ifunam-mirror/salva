%h2 Lista de usuarios

%div{:class => 'span-24 last'}
  = link_to t(:show_all), academic_secretary_users_path
%br

%table{:id => 'filter', :class => 'ui-widget-header ui-corner-tl ui-corner-tr ui-helper-clearfix'}
  = render :partial => 'filter_header'
  %tbody{:id =>'collection'}
    = render :partial => @users
  %tfoot{:id => 'paginator'}
    %tr
      %th{:style => 'width: 100%', :class => 'ui-widget  ui-corner-all'}
        = will_paginate @users

%div{ :class => 'span-24 buttons_left last' }
  = link_to 'Nuevo usuario', new_academic_secretary_user_path, :class => "ui-state-default ui-corner-all ui-button"
