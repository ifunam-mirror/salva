- simple_form_for @user, :user, :url => academic_secretary_user_path, :html => { :multipart => true } do |f|
  = render :partial => 'form', :locals => { :f => f }  
  %div{ :class => 'span-24 buttons_left last' }
    = f.submit  t(:update), :class => "ui-state-default ui-corner-all button"
    = link_to t(:cancel), academic_secretary_user_path, :class => "ui-state-default ui-corner-all button"