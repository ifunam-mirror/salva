- column_names = [:fullname, :adscription, :start_date, :end_date, :status, :anual_report, :anual_activities_report]
%tr{:class => "filter_header", :id => "filter_row"}
  = form_for :search, :remote => true, :html => {:id => "filter_form"} do |f|
    %th{:class => 'ui-state-default', :style => 'width: 6%;'}
      = link_to t(:show_all), academic_secretary_users_path, :style => 'color: yellow;'
    %th{:class => 'ui-state-default', :style => 'width: 20%;'}
      =t('.fullname')
      %br
      = f.text_field :fullname_like, :size => 20
      %br
    %th{:class => 'ui-state-default', :style => 'width: 20%;'}
      =t('.adscription')
      %br
      = f.collection_select :adscription_id_equals, Adscription.where("id <=6").all, :id, :name, { :prompt => true }
    %th{:class => 'ui-state-default', :style => 'width: 12%;'}
      =t('.start_date_year')
      %br
      = f.text_field :jobposition_start_date_year_equals, :size => 4

    %th{:class => 'ui-state-default', :style => 'width: 12%;'}
      =t('.end_date_year')
      %br
      = f.text_field :jobposition_end_date_year_equals, :size => 4

    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('.schoolarship')
      %br
      = f.collection_select :schoolarship_id_equals, Schoolarship.where("id >=48  AND id <= 53").all, :id, :name_and_institution_abbrev, { :prompt => true }

    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('.status')
      %br
      = f.collection_select :userstatus_id_equals, Userstatus.all, :id, :name, { :prompt => true }
