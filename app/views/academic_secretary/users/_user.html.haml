%div{:id => dom_id(user), :class => "span-24 section_left last"}

  %div{ :class => 'span-24 last' }
    %div{:class => "span-2"}

      = image_tag(user.avatar(:icon))
    %div{:class => "span-6"}
      = user.fullname_or_login
    %div{:class => "span-4"}
      = user.login
    %div{:class => "span-6"}
      = user.email
    %div{:class => "span-3 last"}
      = user.userstatus_id == 2 ? image_tag('activated.png') : image_tag('locked.png')
      #{link_to 'Ver', academic_secretary_user_path(user)}