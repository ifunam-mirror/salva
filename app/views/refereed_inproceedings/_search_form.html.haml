= render :partial => 'shared/search_options'
= form_for :search, :remote => true, :html => {:id => "filter_form", :style => search_form_display_enabled} do |f|
  .span-5=t(:authors)
  .span-5=t(:title)
  .span-2=t(:year)
  .span-8.last

  .span-5= f.text_field :authors_like_ignore_case, :size => 20
  .span-5= f.text_field :title_like_ignore_case, :size => 20
  .span-2= f.text_field :year_eq, :size => 4
  .span-6.last
    .search_button= link_to t(:search), "#", :id => "search_button"
    .reset_search_button.last= link_to "Listar todos", "#" , :id => 'reset_search_button'
