-  @bookedition_authors = user_role(book_author, :bookedition_roleinbooks, current_user.id)
= f.simple_fields_for :bookedition_roleinbooks, @bookedition_authors do |uf|
  - if !f.object.new_record?
    = uf.hidden_field :id
    = uf.hidden_field :bookedition_id, :value => book_author.id
  = uf.hidden_field :user_id, :value => current_user.id
  = uf.input :roleinbook_id, :as => :radio, :collection => Roleinbook.authors, :prompt => true, :required => true,  :wrapper_class => 'span-4 radio_set last'

