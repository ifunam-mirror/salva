= render :partial => 'shared/search_options'
= form_for :search, :remote => true, :html => {:id => "filter_form", :style => search_form_display_enabled} do |f|
  .span-3=t(:authors)
  .span-3=t(:title)
  .span-5=t(:technical_producttype)
  .span-5=t(:technical_productstatus)
  .span-2.last=t(:year)

  .span-3= f.text_field :authors_like_ignore_case, :size => 12
  .span-3= f.text_field :title_like_ignore_case, :size => 12
  .span-5= f.collection_select :techproducttype_id_eq, Techproducttype.all, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-5= f.collection_select :techproductstatus_id_eq, Techproductstatus.all, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-2.last= f.text_field :year_eq, :size => 4

  .span-5.prepend-13.last
    .search_button= link_to t(:search), "#", :id => "search_button"
    .reset_search_button.last= link_to "Listar todos", "#" , :id => 'reset_search_button'
