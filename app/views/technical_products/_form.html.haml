= render :partial => "/shared/errors", :object => f.object.errors

%div{ :class => 'span-24 section_left append-bottom last' }
  = f.input :authors, :as => :text, :input_html => { :size => '60x1' }, :wrapper_class => 'span-12'
  = f.input :title, :as => :text, :input_html => { :size => '60x1' }, :wrapper_class => 'span-12 last'

  %div{:class => 'span-12 ui-widget', :id => 'techproducttype', 'data-controller-name'=>'techproducttypes' }
    = f.label :techproducttype, :required => true
    = f.collection_select :techproducttype_id, Techproducttype.all, :id, :name, {:prompt => true}, {:class => 'autocompleted_select'}
    = link_to_action 'ui-icon-plus', 'Agregar tipo de producto', '#', :id => 'new_record'
  = f.input :descr, :as => :text, :input_html => { :size => '60x1' }, :wrapper_class => 'span-12 last'

  %div{:class => 'span-12'}
    = f.label :techproductstatus, :required => true
    = f.collection_select :techproductstatus_id, Techproductstatus.all, :id, :name, :prompt => true
  %div{:class => 'span-12 ui-widget last', :id => 'institution', 'data-controller-name'=>'institutions' }
    = f.label :institution, :required => true
    = f.select :institution_id, [], {:prompt => true}, {:class => 'autocompleted_select'}
    = link_to_action 'ui-icon-plus', 'Agregar instituciÃ³n', '#', :id => 'new_record'

  %div{:class => 'span-24 last'}
    = render :partial => 'user_techproducts/form', :locals => {:technical_product => @technical_product, :f => f}
