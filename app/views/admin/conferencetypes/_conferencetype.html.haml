%tr{:class => cycle('record-odd', 'record-even'), :id => dom_id(conferencetype) }
  - if conferencetype.has_associated_records?
    %td{:style => 'width: 30px;'}
      = check_box_tag 'record_id', conferencetype.id, false, 'data-parent-id' => dom_id(conferencetype), :disabled => true
    %td{:style => 'width: 630px;'}
      %b= conferencetype.name
      %br
      = droppable_associations(conferencetype)
    %td{:style => 'width: 90px; text-align: center;'}
      = link_to_draggable_action 'ui-icon-arrow-4', t(:move_all), conferencetype
    %td{:style => 'width: 90px; text-align: center;'}
      = link_to_action 'ui-icon-pencil', t(:edit),  edit_admin_conferencetype_path(:id => conferencetype.id)
    %td{:style => 'width: 90px; text-align: center;'}
  - else
    %td{:style => 'width: 30px;'}
      = check_box_tag 'record_id', conferencetype.id, false, 'data-parent-id' => dom_id(conferencetype)
    %td{:style => 'width: 630px;'}
      %b= conferencetype.name
      %br
      =  droppable_associations(conferencetype)
      %div{:class => 'ui-state-highlight ui-corner-all', :id => 'zero_associated_records'}
        %span{:class => 'ui-icon ui-icon-info', :style => 'float: right;', :title => '0 registros asociados'}
    %td{:style => 'width: 90px; text-align: center;'}
      = link_to_draggable_action 'ui-icon-arrow-4', t(:move_all), conferencetype 
    %td{:style => 'width: 90px; text-align: center;'}
      = link_to_action 'ui-icon-pencil', t(:edit),  edit_admin_conferencetype_path(:id => conferencetype.id)
    %td{:style => 'width: 90px; text-align: center;'}
      = link_to_action 'ui-icon-trash', t(:del), admin_conferencetype_path(:id => conferencetype.id), :method => :delete, :confirm => t(:delete_confirm_question), :remote => true, 'data-parent-id' => dom_id(conferencetype)