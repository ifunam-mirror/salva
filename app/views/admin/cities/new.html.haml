%div{ :class => 'span-14 section_left last' } 
  %h3= t('cities.new.title')
  = simple_form_for(@city, :url => admin_cities_path) do |f|
    = render :partial => 'form', :locals => { :f => f}
    %div{ :class => 'span-14 buttons_left last' }
      = f.submit  t(:save), :class => "ui-state-default ui-corner-all button"
      = link_to t(:cancel), admin_cities_path, :class => "ui-state-default ui-corner-all button"