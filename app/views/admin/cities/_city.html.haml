%tr{:class => cycle('record-odd', 'record-even'), :id => dom_id(city) }
  %td{:style => 'width: 30px;'}
    = check_box_tag 'record_id', city.id, false, 'data-parent-id' => dom_id(city)
  %td{:style => 'width: 630px;'}
    %b= city.name
    %br
    = render :partial => 'associations_size', :locals => { :record => city }
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_draggable_action('ui-icon-arrow-4', t(:move_all), city)
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_action('ui-icon-pencil', t(:edit),  edit_admin_city_path(:id => city.id))
  %td{:style => 'width: 90px; text-align: center;'}
    = link_to_action('ui-icon-trash', t(:del), admin_city_path(:id => city.id), :method => :delete, :confirm => t(:delete_confirm_question), :remote => true, 'data-parent-id' => dom_id(city))
