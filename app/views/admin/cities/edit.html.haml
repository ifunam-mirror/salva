%div{ :class => 'span-14 section_left last' }
  %h3= t('cities.edit.title') 
  = simple_form_for(@city, :city, :url => admin_city_path) do |f|
    = render :partial => 'form', :locals => { :f => f}
    %div{ :class => 'span-14 buttons_left last' }
      = f.submit  t(:update), :class => "ui-state-default ui-corner-all button"
      = link_to t(:cancel), admin_cities_path, :class => "ui-state-default ui-corner-all button"
