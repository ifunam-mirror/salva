= simple_form_for @user, :url => admin_users_path, :html => { :multipart => true, :id => 'save_user'} do |f|
  = render :partial => 'form', :locals => { :f => f }
  %div{ :class => 'span-24 buttons_left last' }
    = f.submit  t(:save), :class => "ui-state-default ui-corner-all button", :id => 'save_user'
    = link_to t(:cancel), admin_users_path, :class => "ui-state-default ui-corner-all button"