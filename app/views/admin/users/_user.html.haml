%tr{:class => cycle('record-odd', 'record-even') }
  %td= user.login
  %td{:id=>'profile'}
    %div{:id => 'profile_'+ dom_id(user)}
      = user.fullname_or_login
    %div{:style => 'margin-top:5px; text-align: right;'}
      = link_to content_tag(:span, '', :class => 'ui-button-icon-primary ui-icon ui-icon-zoomin') , admin_user_path(user), :title => 'Ver detalles', :class => "ui-button ui-button-icon ui-widget ui-state-default ui-corner-all"
      = link_to content_tag(:span, '', :class => 'ui-button-icon-primary ui-icon ui-icon-document') , edit_admin_user_path(:id => user.id), :title => 'Modificar', :class => "ui-button ui-button-icon ui-widget ui-state-default ui-corner-all"

  %td= user.adscription_name
  - unless user.jobposition.nil?
    %td= user.jobposition.start_date
    %td= user.jobposition.end_date 
    %td= user.jobposition.category_name
  - else
    - 3.times do
      %td
  %td{:class => 'action'}
    %div{:class => 'ui-widget ui-widget-content ui-corner-all', :style => 'width: 40px; padding: 3px;', :id => 'userstatus_'+ dom_id(user) }
      %span{:style => 'float: left; text-align: right;', :id => 'userstatus_indicator_'+ dom_id(user) }
        = render :partial => 'userstatus', :locals => { :userstatus => user.userstatus}
      %div{:class => "ui-state-default ui-corner-all", :style => 'heigth: 16px;', :id => 'edit_status'}
        = link_to content_tag(:span, '', {:class =>'ui-icon ui-icon-triangle-1-s'}), edit_status_admin_user_path(:id => user.id, :format => 'js'), :remote => true, :id => user.id, :title => 'Cambiar estado'
