%tr{:class => "filter_header", :id => "filter_row"}
  = form_for :search, :remote => true, :html => {:id => "filter_form"} do |f|
    %th{:class => 'ui-state-default', :style => 'width: 5%;'}
      = t('admin.user.filter_header.login')
      %br
      = f.text_field :login_like, :size => 6
    %th{:class => 'ui-state-default', :style => 'width: 25%;'}
      =t('admin.user.filter_header.fullname')
      %br
      = f.text_field :fullname_like, :size => 20
      %br
    %th{:class => 'ui-state-default', :style => 'width: 20%;'}
      =t('admin.user.filter_header.adscription')
      %br
      = f.collection_select :adscription_id_equals, Adscription.where("id <=7").all, :id, :name, { :prompt => true }
    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('admin.user.filter_header.start_date_year')
      %br
      = f.text_field :jobposition_start_date_year_equals, :size => 4

    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('admin.user.filter_header.end_date_year')
      %br
      = f.text_field :jobposition_end_date_year_equals, :size => 4

    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('admin.user.filter_header.jobpositioncategory')
      %br
      = f.collection_select :jobpositioncategory_id_equals, Jobpositioncategory.find_all_by_jobpositiontype_id(params[:id] || 1), :id, :name, { :prompt => true }
    %th{:class => 'ui-state-default', :style => 'width: 10%;'}
      =t('admin.user.filter_header.status')
      %br
      = f.collection_select :userstatus_id_equals, Userstatus.all, :id, :name, { :prompt => true }
%tr
  - 6.times do
    %td{:class => 'ui-state-default'}
  %td{:class => 'ui-state-default'}
    = link_to t('admin.user.filter_header.list_all'), '#', :remote => true, :id => 'filter_header_reset_all', :class => "ui-state-default ui-corner-all button"
