%div{ :class => 'span-14 section_left last' }
  %h3= t('schoolarships.show.title')
  - show_for @schoolarship do |u|
    = u.attribute :name, :wrapper_html => {:class => 'span-14 last'}
    = u.association :institution, :using => :name, :wrapper_html => {:class => 'span-14 last'}
%div{ :class => 'span-14 buttons_left last' }
  = link_as_button t(:edit), edit_admin_schoolarship_path(:id => @schoolarship.id)
  = link_as_button t(:back), admin_schoolarships_path
