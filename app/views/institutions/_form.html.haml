%div{ :class => 'span-11 section_left last' } 
  = render :partial => "/shared/errors", :object => f.object.errors
  = f.error_messages

  %div{:class => 'span-4'}
    =f.label :name
  %div{:class => 'span-7 last'}
    =f.text_area :name, :size => '30x2'

  %div{:class => 'span-4'}
    =f.label :institutiontitle
  %div{:class => 'span-7 last'}
    =f.collection_select :institutiontitle_id, Institutiontitle.all, :id, :name, { :prompt => true }

  %div{:class => 'span-4'}
    =f.label :institutiontype
  %div{:class => 'span-7 last'}
    =f.collection_select :institutiontype_id, Institutiontype.all, :id, :name, { :prompt => true }

  %div{:class => 'span-4'}
    =f.label :country
  %div{:class => 'span-7 last'}
    =f.collection_select :country_id, Country.all, :id, :name, { :prompt => true }
