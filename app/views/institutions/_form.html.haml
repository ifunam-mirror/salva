%div{ :class => 'span-7 section_left last' } 
  %div{:class => 'span-7 last'}
    = f.input :name, :as => :string, :html_input => { :size => '60' }
  %div{:class=> 'span-14 last'}
    = f.label :institutiontitle_id, :required => true
    = f.collection_select :institutiontitle_id,  Institutiontitle.all, :id, :name, {:prompt => true, :selected => 2, :required => true}
  %div{:class=> 'span-14 last'}
    = f.label :institutiontype_id, :required => true
    = f.collection_select :institutiontype_id,  Institutiontype.all, :id, :name, {:prompt => true, :selected => 2, :required => true}
  %div{:class=> 'span-14 last'}
    = f.label :country_id, :required => true
    = f.collection_select :country_id,  Country.all, :id, :name, {:prompt => true, :selected => 2, :required => true}