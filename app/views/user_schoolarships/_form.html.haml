- if !f.object.nil? and !f.object.new_record?
  = f.hidden_field :id
  = f.hidden_field :user_id

%div{ :class => 'span-24 last' }
  %div{:class => 'span-6'}
    = f.label :schoolarship, :required => true
    = f.collection_select :schoolarship_id, Schoolarship.where("id >=62  AND id <= 67").all, :id, :name_and_institution_abbrev, { :prompt => true }
  = f.input :start_date, :as => :string, :input_html =>  { :size => 10 }, :wrapper_class => 'span-6'
  = f.input :end_date, :as => :string, :input_html =>  { :size => 10 }, :wrapper_class => 'span-6 last'
