- if !f.object.nil? and !f.object.new_record?
  = f.hidden_field :id
  = f.hidden_field :user_id

%div{ :class => 'span-24 last' }
  %div{:class => 'span-6'}
    = f.label :schoolarship, :required => true
    = f.collection_select :schoolarship_id, Schoolarship.where("id >=48  AND id <= 53").all, :id, :name_and_institution_abbrev, { :prompt => true }
  %div{:class => 'span-6'}
    = f.label :start_date, :required => true
    = f.text_field :start_date, :size => 10
  %div{:class => 'span-6 '}
    = f.label :end_date, :required => true
    = f.text_field :end_date, :size => 10
  %div{:class => 'span-6 last', :style => 'padding-top: 30px;'}
    - if !defined?(disabled_delete)
      = remove_child_link "remove", f
    - elsif !f.object.nil? and !f.object.new_record?
      = remove_remote_child 'remove_user_schoolarship', f
