= form_for :search, :remote => true, :html => {:id => "filter_form"} do |f|
  .span-5=t(:authors)
  .span-5=t(:title)
  .span-6=t(:newspaper)
  .span-2.last=t(:year)

  .span-5= f.text_field :authors_like_ignore_case, :size => 20
  .span-5= f.text_field :title_like_ignore_case, :size => 20
  .span-6= f.collection_select :newspaper_id_eq, Newspaper.all, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-2.last= f.text_field :year_eq, :size => 4

  .span-5.prepend-13.last
    .search_button= link_to t(:search), "#", :id => "search_button"
    .reset_search_button.last= link_to "Listar todos", "#" , :id => 'reset_search_button'
