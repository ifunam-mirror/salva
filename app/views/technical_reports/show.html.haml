%h3= t('technical_reports.show.title')
.section-with-border-and-bg
  = show_for @genericwork do |u|
    .span-9= u.attribute :authors
    .span-9.last= u.attribute :title

    .span-6= u.attribute :reference
    .span-6= u.attribute :vol
    .span-6.last= u.attribute :pages

    .span-6= u.attribute :isbn_issn
    .span-6= u.attribute :year
    .span-6.last= u.attribute :month

    .span-6= u.association :genericworktype, :using => :name
    .span-12.last= u.association :genericworkstatus, :using => :name

    .span-18.last
      %b=t(:associated_academics)
      = u.association :user_genericworks, :collection_tag => :ol do |record| 
        %li= record.author_with_role
  .row
    = render :partial => 'shared/record', :object => @genericwork

#submit_buttons
  = link_to t(:edit), edit_technical_report_path(:id => @genericwork.id)
  = link_to t(:back), technical_reports_path

