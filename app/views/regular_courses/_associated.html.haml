%tr{:class => cycle('record-odd', 'record-even'), :id => dom_id(record) }
  %td{:style => 'width: 30px;'}
    = checkbox_to_delete(record)
  %td{:style => 'width: 630px;'}
    %div{:class => 'span-14 last'}
    = record.as_text
    = image_tag('associated_record.png', :border => 0, :style => 'float: right;', :title => t(:instructor) )
    %div{:class => 'span-12 round_section last'}
      %div{:class => 'span-2'}
        %b="Periodos:"
      %div{:class => 'span-10 last'}
        %ul{:style => 'margin: 0px;', :id => dom_id(record) + '_periods' }
        - record.user_regularcourses.where(:user_id => current_user.id).all.each do |user_and_period|
          = render :partial => 'user_regular_courses/record', :locals => {:user_and_period => user_and_period}
      %div{:class => 'span-10 last'}
        = link_as_button 'Agregar periodo', new_user_regular_course_path(:id => record.id, :format => :js), :id => 'new_period', :remote => true

  %td{:style => 'width: 100px; text-align: center;'}
    = link_to_action 'ui-icon-zoomin', t(:show),  regular_course_path(:id => record.id)
  %td{:style => 'width: 100px; text-align: center;'}
    = link_to_action 'ui-icon-pencil', t(:edit),  edit_regular_course_path(:id => record.id)
  %td{:style => 'width: 100px; text-align: center;'}
    = link_to_delete record, regular_course_path(:id => record.id)
