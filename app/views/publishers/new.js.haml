= simple_form_for(@publisher, :remote => true, :html => {:id => 'new_record_form', 'data-class-name' => 'publisher'}) do |f|
  = render :partial => 'form', :locals => { :f => f}
  %div{ :class => 'span-6 buttons_left last' }
    = f.submit t(:save), :class => "ui-state-default ui-corner-all button"
