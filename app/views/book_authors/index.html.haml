%div{:class => 'span-24 last'}
  %div{:class => 'span-8'}
    %h3= t('.title')
  %div{:class=> 'span-16 nav_links last'}
    = link_to t('.my_book_authors'), book_authors_path
    = link_to t('.not_my_book_authors'), not_my_book_authors_path

%br
%table{:id => 'collection_table', :class => 'ui-widget-header ui-corner-tl ui-corner-tr ui-helper-clearfix'}
  %thead{:id => "filter_header"}
    = render :partial => 'filter_header'
    %tbody{:id =>'collection'}
      = render :partial => 'record', :collection => @book_authors
      = render :partial => 'collection_footer'
    %tfoot{:id => 'paginator'}
      %tr
        %th
          = will_paginate @book_authors

%div{ :class => 'span-24 buttons_left last' }
  = link_as_button t(:new), new_book_author_path
