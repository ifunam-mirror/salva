%h3= t('popular_science_activities.show.title')
.section-with-border-and-bg
  = show_for @activity do |u|
    .span-9= u.attribute :name
    .span-9.last= u.attribute :descr

    .span-9= u.association :activitytype, :using => :name
    .span-3= u.attribute :year, :using => :name
    .span-6.last= u.attribute :month

  .row
    = render :partial => 'shared/record', :object => @activity

#submit_buttons
  = link_to t(:edit), edit_popular_science_activity_path(:id => @activity.id)
  = link_to t(:back), popular_science_activities_path

