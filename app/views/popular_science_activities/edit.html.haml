%h3= t('.title')
= simple_form_for @activity, :popular_science_activity, :url => popular_science_work_path, :html => { :multipart => true, :id => 'record'} do |f|
  = render :partial => 'form', :locals => { :f => f }
  %div{ :class => 'span-24 buttons_left last' }
    = f.submit  t(:update), :class => "ui-state-default ui-corner-all button"
    = link_as_button t(:cancel), popular_science_activities_path