%div{ :class => 'span-24 section_left last' }
  %h3= t('user_settings.show.title')
  - show_for @user do |u|
    = u.attribute :author_name, :wrapper_html => { :class => 'span-12 last'}
    = u.attribute :homepage, :wrapper_html => { :class => 'span-12 last'}
    = u.attribute :blog, :wrapper_html => { :class => 'span-12 last'}
    = u.attribute :calendar, :wrapper_html => { :class => 'span-12 last'}
  = render :partial => 'shared/record', :object => @user

  %div{ :class => 'span-22 buttons_left last' }
    = link_to t(:edit), edit_user_settings_path(:id => @user.id), :class => "ui-state-default ui-corner-all button"


