.section-with-border-and-bg
  .row
    = render :partial => "/shared/errors", :object => f.object.errors

  .row
    #journal.span-6.last
      = f.association :journal, :using => :name , :input_html  => {:class => 'chosen-select', :required => true}
      = link_to_new_record 'Agregar journal', new_journal_path
    .span-12.last= f.association :refereed_criterium, :as => :radio, :collection => RefereedCriterium.all, :wrapper_class => 'radio-set'

  .row
    .span-2
      = f.input :year, :as => :string, :input_html => { :size => '4', :autocomplete => "off" }
    .span-16.last
      = f.label :month, :required => true
      = select_month_for 'month', 'user_refereed_journal'
