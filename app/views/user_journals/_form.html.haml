.section-with-border-and-bg
  .row
    = render :partial => "/shared/errors", :object => f.object.errors

  .row
    #journal.span-6.last
      = f.association :journal, :using => :name , :input_html  => {:class => 'chosen-select', :required => true}
      = link_to_new_record 'Agregar journal', new_journal_path
    .span-12.last= f.association :roleinjournal, :collection => Roleinjournal.no_referee, :using => :name, :as => :radio, :wrapper_class => 'radio-set'

  .row
    .span-3
      = f.input :startyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off" }
    .span-6
      = f.label :startmonth, :required => true
      = select_month_for 'startmonth', 'user_journal'

    .span-3
      = f.input :endyear, :as => :string, :input_html => { :size => '4', :autocomplete => "off" }
    .span-6.last
      = f.label :endmonth, :required => true
      = select_month_for 'endmonth', 'user_journal'
