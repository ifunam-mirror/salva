= render :partial => 'shared/search_options'
= form_for :search, :remote => true, :html => {:id => "filter_form", :style => search_form_display_enabled} do |f|
  .span-6=t(:roleinjournal)
  .span-3=t(:startyear)
  .span-3=t(:endyear)
  .span-6.last

  .span-6= f.collection_select :roleinjournal_id_eq, Roleinjournal.no_referee, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-3= f.text_field :startyear_eq, :size => 4
  .span-3= f.text_field :endyear_eq, :size => 4
  .search_button= link_to t(:search), "#", :id => "search_button"
  .reset_search_button.last= link_to "Listar todos", "#" , :id => 'reset_search_button'