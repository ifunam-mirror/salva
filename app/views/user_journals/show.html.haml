%h3= t('user_journals.show.title')
.section-with-border-and-bg

  = show_for @user_journal do |u|
    .span-9= u.association :journal, :using => :name
    .span-9.last= u.association :roleinjournal, :using => :name

    .row
      .span-4
        = u.attribute :startyear, :using => :name
      .span-5
        = u.attribute :startmonth, :using => :name
      .span-4
        = u.attribute :endyear, :using => :name
      .span-5.last
        = u.attribute :endmonth, :using => :name

  .row
    = render :partial => 'shared/record', :object => @user_journal

#submit_buttons
  = link_to t(:edit), edit_user_journal_path(:id => @user_journal.id)
  = link_to t(:back), user_journals_path

