%div{ :class => 'span-24 section_left last' }
  %h3= t('user_journals.show.title')
  - show_for @user_journal do |u|
    = u.association :journal, :using => :name, :wrapper_html => {:class => 'span-12'}
    = u.association :roleinjournal, :using => :name, :wrapper_html => {:class => 'span-12 last'}

    = u.attribute :startyear, :using => :name, :wrapper_html => {:class => 'span-6'}
    = u.attribute :startmonth, :using => :name, :wrapper_html => {:class => 'span-6'}
    = u.attribute :endyear, :using => :name, :wrapper_html => {:class => 'span-6'}
    = u.attribute :endmonth, :using => :name, :wrapper_html => {:class => 'span-6 last'}

  = render :partial => 'shared/record', :object => @user_journal

%div{ :class => 'span-14 buttons_left last' }
  = link_as_button t(:edit), edit_user_journal_path(:id => @user_journal.id)
  = link_as_button t(:back), user_journals_path

