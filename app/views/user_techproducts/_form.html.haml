-  @user_techproducts = user_role(technical_product, :user_techproducts, current_user.id)
= f.simple_fields_for :user_techproducts, @user_techproducts do |uf|
  - if !f.object.new_record?
    = uf.hidden_field :id
    = uf.hidden_field :techproduct_id, :value => technical_product.id
  = uf.hidden_field :user_id, :value => current_user.id
  %div{:class => 'span-12'}
    = f.label :role, :required => true
    = uf.collection_select :userrole_id, Userrole.all, :id, :name, :prompt => true
  = uf.input :year, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }, :wrapper_class => 'span-6 last', :required => true

