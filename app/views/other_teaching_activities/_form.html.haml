.section-with-border-and-bg
  .row= render :partial => "/shared/errors", :object => f.object.errors
  .row
    .span-9= f.input :name, :as => :text, :input_html => { :size => '50x1' }
    .span-9.last= f.input :descr, :as => :text, :input_html => { :size => '50x1' }

  .row
    .span-6= f.association :activitytype, :collection => Activitytype.teaching, :using => :name, :input_html => { :prompt => true, :class => 'chosen-select' }
    .span-2
      = f.input :year, :as => :string, :input_html => { :size => '4', :autocomplete => "off", :value => Date.today.year }
    .span-6.last
      = f.label :month, :required => true
      = select_month_for 'month', 'activity'

