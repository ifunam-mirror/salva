.row
  %h4='Nombre de carrera y Grado'
.row
  = f.input :name, :as => :string, :input_html => { :size => 80, :autocomplete => "off", :class => 'autocompleted_text', 'data-controller-name' => 'careers'}
.row
  = f.association :degree, :collection => Degree.higher, :as => :radio, :wrapper_class => 'radio-set'

- f.object.institution = f.object.institution.nil? ? Institution.new : f.object.institution.dup
= f.simple_fields_for :institution, f.object.institution do |iform|
  = render :partial => 'institutions/faculty_form', :locals => { :f => iform }
