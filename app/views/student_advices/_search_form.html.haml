
= form_for :search, :remote => true, :html => {:id => "filter_form"} do |f|
  .span-6=t(:degree)
  .span-6=t(:target)
  .span-2=t(:startyear)
  .span-2=t(:endyear)
  .span-2.last

  .span-6= f.collection_select :degree_id_eq, Degree.all, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-6= f.collection_select :indivadvicetarget_id_eq, Indivadvicetarget.students, :id, :name, {:prompt => true}, :class => 'chosen-select'
  .span-2= f.text_field :startyear_eq, :size => 4
  .span-4.last= f.text_field :endyear_eq, :size => 4


  .span-5.prepend-13.last
    .search_button= link_to t(:search), "#", :id => "search_button"
    .reset_search_button.last= link_to "Listar todos", "#" , :id => 'reset_search_button'
