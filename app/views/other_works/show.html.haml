%h3= t('other_works.show.title')
.section-with-border-and-bg

  = show_for @genericwork do |u|
    .span-9= u.attribute :authors
    .span-9.last= u.attribute :title

    .span-3= u.attribute :year
    .span-15.last= u.attribute :month

    .span-18.last= u.association :institution, :using => :name

    .span-18.last
      = u.association :user_genericworks, :collection_tag => :ol do |record|
        %li= record.author_with_role
  .row
    = render :partial => 'shared/record', :object => @genericwork

#submit_buttons
  = link_to t(:edit), edit_other_work_path(:id => @genericwork.id)
  = link_to t(:back), other_works_path

